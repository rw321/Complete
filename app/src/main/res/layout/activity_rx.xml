<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rxjava print text"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:padding="12dp"
        android:background="@color/black"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rxjava show image by id"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:padding="12dp"
        android:background="@color/black"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change thread test"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:padding="12dp"
        android:background="@color/black"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tv_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="map test"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:padding="12dp"
        android:background="@color/black"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tv_flatmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flat map test"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:padding="12dp"
        android:background="@color/black"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tv_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="double click test"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:padding="12dp"
        android:background="@color/black"
        android:layout_margin="8dp"/>

</LinearLayout>